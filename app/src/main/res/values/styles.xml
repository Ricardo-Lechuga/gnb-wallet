<resources>

	<style name="AppButton" parent="Widget.AppCompat.Button">
		<item name="android:textSize">14dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@string/font_fontFamily_medium</item>
	</style>

	<style name="AppButton.Green" parent="AppButton">
		<item name="android:background">@drawable/button_green_background_selector</item>
		<item name="android:textColor">@color/button_green_text_selector</item>
	</style>

	<style name="AppButton.Black" parent="AppButton">
		<item name="android:background">@drawable/button_black_background_selector</item>
		<item name="android:textColor">@color/button_black_text_selector</item>
	</style>

	<style name="OperationButton" parent="android:Widget.Button">
		<item name="android:layout_width">@dimen/login_button_width</item>
		<item name="android:layout_height">@dimen/login_button_height</item>
		<item name="android:background">@drawable/button_operation_background_selector</item>
		<item name="android:textColor">@color/button_operation_text_selector</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/login_button_text_size</item>
		<item name="android:fontFamily">@string/font_fontFamily_light</item>
	</style>

</resources>
