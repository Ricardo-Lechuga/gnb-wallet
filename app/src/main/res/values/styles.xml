<resources>

	<style name="AppButton" parent="Widget.AppCompat.Button">
		<item name="android:textSize">14dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:fontFamily">@string/font_fontFamily_medium</item>
	</style>

	<style name="AppButton.Green" parent="AppButton">
		<item name="android:background">@drawable/button_green_background_selector</item>
		<item name="android:textColor">@color/button_green_text_selector</item>
	</style>

	<style name="AppButton.Black" parent="AppButton">
		<item name="android:background">@drawable/button_black_background_selector</item>
		<item name="android:textColor">@color/button_black_text_selector</item>
	</style>

</resources>
